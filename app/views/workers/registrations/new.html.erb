<style>
  #page-container{
    padding: 10%;
  }
</style>

<div class="container-fluid text-light text-center" id='page-container' style="background: rgba(0, 0, 0, 0.5);">
  <h1> Worker</h1>
  <h2>Sign up</h2>
 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "workers/shared/error_messages", resource: resource %>

    <div class="container pt-3">
      <%= f.text_field :first_name, hide_label: true, placeholder: "first name", autofocus: true %>
    </div>
        
    <div class="container pt-3">
      <%= f.text_field :last_name, hide_label: true, placeholder: "last name", autofocus: true %> 
    </div>
        
    <div class="container pt-3">
      <%= f.email_field :email, hide_label: true, placeholder: "email", autofocus: true, autocomplete: "email" %>    
    </div>

    <div class="field">
      <%= f.label :specialty %><br />
      <%= f.select :specialty, $SPECIALTY_TYPES, autofocus: true %>
    </div>

    <div class="container pt-3">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, hide_label: true, placeholder: "password", autocomplete: "new-password" %>  
    </div>
        
    <div class="container pt-3">
      <%= f.password_field :password_confirmation, hide_label: true, placeholder: "confirm password", autocomplete: "new-password" %>   
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>

  <% end %>
 
  <%= link_to "Cancel", home_path, class: "text-dark"%>
  <%= link_to "Log in", new_session_path(resource_name), class: "text-dark" %>

</div>
