<h1 class="text-center">Details About <%= @worker.first_name %></h1>
<p></p>
<table class="table table-hover ml-4" style="max-width: 25rem;">

  <thead class="thead-dark">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @worker.first_name %> </td>
        <td><%= @worker.last_name %> </td>
      </tr>
  </tbody>

</table>

<table class="table table-hover ml-4" style="max-width: 25rem;">

  <thead class="thead-dark">
    <tr>
        <th>Email</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @worker.email %></td>
      </tr>
  </tbody>

</table>

<table class="table table-hover ml-4" style="max-width: 25rem;">

  <thead class="thead-dark">
    <tr>
        <th>Specialty</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @worker.specialty %></td>
      </tr>
  </tbody>

</table>

<p>
Additional Information
</p>

<% if @worker.jobs != nil %>
  <p>
    <%= link_to 'View Reviews', worker_reviews_path, class: 'btn' %>
  </p>
<% end %>

<p>
    <%= link_to 'Back',worker_directory_path, class: 'btn btn-primary' %>
</p>